@page
@model MetaX.Pages.SignupModel
@{
    ViewData["Title"] = "Kaydol";
}

<style>
    .custom-margin {
        margin-top: 5rem;
        margin-bottom: 5rem;
    }
</style>

<div class="container custom-margin">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">
                        KAYDOL
                    </h5>
                    <form>
                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="floatingName"
                            />
                            <label for="floatingName">Ad</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="floatingSurname"
                            />
                            <label for="floatingSurname">Soyad</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input
                                type="tel"
                                class="form-control"
                                id="floatingPhoneNumber"
                            />
                            <label for="floatingPhoneNumber">Telefon Numarası</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input
                                type="email"
                                class="form-control"
                                id="floatingEmail"
                            />
                            <label for="floatingEmail">Mail</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input
                                type="password"
                                class="form-control"
                                id="floatingPassword"
                            />
                            <label for="floatingPassword">Şifre</label>
                        </div>
                        <div class="d-grid">
                            <button
                                class="btn btn-primary btn-login text-uppercase fw-bold"
                                type="submit"
                            >
                                Üye Ol
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    Zaten bir üye misiniz? <a href="#">Giriş yapın</a>
                </div>
            </div>
        </div>
    </div>
</div>
