@page
@model MetaX.Pages.Admin.Reservation.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<div class="container float-start">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-left">Reservasyon Yönetimi</h2>
        </div>
    </div>


    <div class="row mt-5">
        <div class="col-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Kullancıcı Adı">
        </div>
        <div class="col-3">
            <input type="text" id="locationInput" class="form-control" placeholder="Etkinlik Adı">
        </div>
        <div class="col-2 text-right d-flex align-items-center">
            <select id="filterStatus" class="form-control">
                <option value="">Hiçbiri</option>
                <option value="Active">Active</option>
                <option value="Finished">Finished</option>
            </select>
        </div>
    </div>

    <div class="row mt-5 ">
        <div class="col-2">
            <a href="#" class="btn btn-primary w-100">
                <i class="fas fa-search"></i> Ara
            </a>
        </div>
        <div class="col-auto ">
            <a href="#" class="btn btn-outline-dark">
                <i class="fas fa-times"></i>
            </a>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-md-12">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Reservation ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Event Name</th>
                        <th scope="col">Reservation Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.Reservations)
                    {
                        <tr>
                            <td>@reservation.ReservationID</td>
                            <td>@($"{reservation.User.Name} {reservation.User.Surname}")</td>
                            <td>@reservation.Event.Title</td>
                            <td>@reservation.ReservationDate.ToString("MM/dd/yyyy")</td>
                            <td>@(reservation.ReservationDate < DateTime.Today ? "Finished" : "Active")</td>
                            <td>
                                <form method="post" asp-page-handler="Delete" asp-route-reservationId="@reservation.ReservationID" onsubmit="return confirmDelete(event);">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(event) {
            event.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this review!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
        }
    </script>
}