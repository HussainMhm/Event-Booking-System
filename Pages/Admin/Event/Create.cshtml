@page
@model MetaX.Pages.Admin.Event.CreateModel
@{
    ViewData["Title"] = "Etkinlik Ekleme";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<div class="container float-start ">
    <h1>Create Event</h1>
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6 mt-2">
                <label>Title:</label>
                <input class="form-control" required asp-for="Event.Title" />
            </div>
            <div class="form-group col-md-6 mt-2">
                <label>Category:</label>
                <select class="form-select" aria-label="Default select example" required asp-for="Event.Category">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>
        <div class="form-group mt-2">
            <label>Description:</label>
            <textarea class="form-control" asp-for="Event.Description"></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 mt-2">
                <label>Location:</label>
                <input class="form-control" required asp-for="Event.Location" />
            </div>
            <div class="form-group col-md-6 mt-2">
                <label>Date:</label>
                <input type="date" class="form-control" required asp-for="Event.Date" />
            </div>
        </div>
        <div class="form-group mt-2">
            <label>Price:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" step="0.01" class="form-control" required asp-for="Event.Price" />
            </div>
        </div>
        <button type="submit" class="btn btn-md btn-primary mt-3">Save</button>
    </form>
</div>
