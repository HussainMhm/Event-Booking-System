@page
@model MetaX.Pages.Admin.Event.UpdateModel
@{

    ViewData["Title"] = "Etkinlik Güncelleme";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<div class="container float-start">
    <h1>Update Event</h1>
    <form method="post">
        <input type="hidden" asp-for="Event.EventID" />
        <div class="form-row">
            <div class="form-group col-md-6 mt-2">
                <label>Title:</label>
                <input class="form-control" required asp-for="Event.Title" />
            </div>
            <div class="form-group col-md-6 mt-2">
                <label>Category:</label>
                <select class="form-select" aria-label="Default select example" required asp-for="Event.Category">
                    <option value="">Select Category</option>
                    <option value="Concert">Concert</option>
                    <option value="Sports">Sports</option>
                    <option value="Theatre">Theatre</option>
                    <option value="Festival">Festival</option>
                    <option value="Exhibition">Exhibition</option>
                    <option value="Film">Film</option>
                    <option value="Conference">Conference</option>
                    <option value="Party">Party</option>
                    <option value="Fair">Fair</option>
                    <option value="Workshop">Workshop</option>
                </select>
            </div>
        </div>
        <div class="form-group mt-2">
            <label>Description:</label>
            <textarea class="form-control" asp-for="Event.Description"></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 mt-2">
                <label>Location:</label>
                <input class="form-control" required asp-for="Event.Location" />
            </div>
            <div class="form-group col-md-6 mt-2">
                <label>Date:</label>
                <input type="date" class="form-control" required asp-for="Event.Date" />
            </div>
        </div>
        <div class="form-group mt-2">
            <label>Price:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" step="0.01" class="form-control" required asp-for="Event.Price" />
            </div>
        </div>
        <button type="submit" class="btn btn-md btn-primary mt-3">Update</button>
    </form>
</div>
