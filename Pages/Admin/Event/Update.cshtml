@page
@model MetaX.Pages.Admin.Event.UpdateModel
@{

    ViewData["Title"] = "Etkinlik Güncelleme";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<div class="container float-start">
    <h1 class="mb-2">Etkinlik Güncelle</h1>
    <form method="post">
        <input type="hidden" asp-for="Event.EventID" />
        <div class="form-row">
            <div class="form-group col-md-6 mt-2">
                <label class="mt-2">Etkinlik Adı:</label>
                <input class="form-control" required asp-for="Event.Title" />
            </div>
            <div class="form-group col-md-6 mt-2">
                <label class="mt-2">Kategori:</label>
                <select class="form-select" aria-label="Default select example" required asp-for="Event.Category">
                    <option value="">Select Category</option>
                    @foreach (var category in ViewData["Categories"] as List<MetaX.Model.Category>)
                    {
                        <option value="@category.Name" selected="@((string)ViewData["Event.Category"] == category.Name)">@category.Name</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-6 mt-2">
                <label class="mt-2">Görsel:</label>
                <input type="text" class="form-control" asp-for="Event.Image" />
            </div>
        </div>
        <div class="form-group col-md-6 mt-2">
            <label class="mt-2">Açıklama:</label>
            <textarea class="form-control" asp-for="Event.Description"></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 mt-2">
                <label class="mt-2">Lokasyon:</label>
                <input class="form-control" required asp-for="Event.Location" />
            </div>
            <div class="form-group col-md-6 mt-2">
                <label class="mt-2">Tarih:</label>
                <input type="date" class="form-control" required asp-for="Event.Date" />
            </div>
        </div>
        <div class="form-group col-md-6 mt-2">
            <label class="mt-2">Bilet Fiyatı:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" step="0.01" class="form-control" required asp-for="Event.Price" />
            </div>
        </div>
        <button type="submit" class="btn btn-md btn-primary mt-4 px-3">Güncelle</button>
    </form>
</div>
