@page
@model MetaX.Pages.Admin.Review.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}


<div class="container float-start">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-left">Değerlendirme Yönetimi</h2>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Etkinlik Adı">
        </div>
        <div class="col-2 text-right d-flex align-items-center">
            <select id="filterStatus" class="form-control">
                <option value="">Puan</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="col-2">
            <a href="#" class="btn btn-primary w-100">
                <i class="fas fa-search"></i> Ara
            </a>
        </div>
        <div class="col-auto ">
            <a href="#" class="btn btn-outline-dark">
                <i class="fas fa-times"></i>
            </a>
        </div>


    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Etkinlik Adı</th>
                        <th scope="col">Kullanıcı ID</th>
                        <th scope="col">Puan</th>
                        <th scope="col">Yorum</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model.ReviewListing)
                    {
                        <tr>
                            <td>@review.ReviewID</td>
                            <td>@review.EventID</td>
                            <td>@review.UserID</td>
                            <td>@review.Rating</td>
                            <td>@review.Comment</td>
                            <td>
                                <form method="post" asp-page-handler="Delete" asp-route-reviewId="@review.ReviewID" onsubmit="return confirmDelete(event);">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(event) {
            event.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this review!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
        }
    </script>
}