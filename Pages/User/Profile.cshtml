@page
@model MetaX.Pages.User.ProfileModel
@{
}

<div class="container">
    <h1>Hesap Bilgileri</h1>
    <form method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Ad</label>
            <input type="text" id="Name" class="form-control" asp-for="User.Name" required>
        </div>
        <div class="mb-3">
            <label for="Surname" class="form-label">Soyad</label>
            <input type="text" id="Surname" class="form-control" asp-for="User.Surname" required>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">E-posta</label>
            <input type="email" id="Email" class="form-control" asp-for="User.Email" required>
        </div>
        <div class="mb-3">
            <label for="PhoneNumber" class="form-label">Telefon</label>
            <input type="text" id="PhoneNumber" class="form-control" asp-for="User.PhoneNumber" required>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
